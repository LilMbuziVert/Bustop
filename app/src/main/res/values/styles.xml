<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base E-Ink App Theme -->
    <style name="EInkTheme" parent="Theme.Material3.Light.NoActionBar">

        <item name="android:windowBackground">?attr/appBackground</item>
        <item name="android:textColorPrimary">?attr/appOnBackground</item>
        <item name="android:textColorSecondary">?attr/appOnSurface</item>
        <item name="colorPrimary">?attr/appOnBackground</item>
        <item name="colorSecondary">?attr/appOnSurface</item>
        <item name="colorSurface">?attr/appBackground</item>
    </style>

    <!-- Card style -->
    <style name="EInkCard">
        <item name="android:background">@drawable/eink_card_background</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- Button style -->
    <style name="EInkButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">?attr/appOnBackground</item>
        <item name="android:background">@drawable/eink_button_background</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- Text styles -->
    <style name="EInkText">
        <item name="android:textColor">?attr/appOnBackground</item>
        <item name="android:fontFamily">@font/spacemono_regular</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="EInkText.Large">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EInkText.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EInkText.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EInkText.BigNumber">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EInkText.NormalNumber">
        <item name="android:textSize">20sp</item>
    </style>

</resources>
