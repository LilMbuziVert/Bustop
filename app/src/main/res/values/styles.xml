<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EInkTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/eink_white</item>
        <item name="android:colorBackground">@color/eink_white</item>
        <item name="android:textColorPrimary">@color/eink_black</item>
        <item name="android:textColorSecondary">@color/eink_dark_gray</item>
        <item name="colorPrimary">@color/eink_black</item>
        <item name="colorSecondary">@color/eink_dark_gray</item>
        <item name="colorSurface">@color/eink_light_gray</item>
    </style>

    <style name="EInkCard">
        <item name="android:background">@drawable/eink_card_background</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="EInkButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/eink_black</item>
        <item name="android:background">@drawable/eink_button_background</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="EInkText">
        <item name="android:textColor">@color/eink_black</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="EInkText.Large">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EInkText.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EInkText.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/eink_dark_gray</item>
    </style>
</resources>