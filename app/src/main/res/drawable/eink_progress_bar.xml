<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:toDegrees="360"
    android:pivotX="50%"
    android:pivotY="50%">
    <shape
        android:shape="ring"
        android:innerRadiusRatio="3"
        android:thicknessRatio="8">
        <gradient
            android:type="sweep"
            android:startColor="@color/eink_medium_gray"
            android:centerColor="@color/eink_dark_gray"
            android:endColor="@color/eink_medium_gray" />
    </shape>
</rotate>