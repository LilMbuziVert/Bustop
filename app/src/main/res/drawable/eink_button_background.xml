<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/eink_medium_gray" />
            <stroke android:width="1dp" android:color="@color/eink_dark_gray" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/eink_light_gray" />
            <stroke android:width="1dp" android:color="@color/eink_dark_gray" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>