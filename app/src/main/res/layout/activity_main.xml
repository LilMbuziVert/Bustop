<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:background="?attr/appBackground"
    android:fitsSystemWindows="true"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/appOnBackground"
        android:text="@string/nsw_bus_arrivals"
        style="@style/EInkText.Large"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/stopIdTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:hint="@string/stop_id"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/box_stroke_color"
        app:boxBackgroundColor="?attr/appBackground"
        app:hintTextColor="?attr/appOnSurface"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        android:layout_marginBottom="16dp"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/search_24px"
        app:endIconTint="?attr/appOnSurface">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/stopIdEditText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            style="@style/EInkText.Medium"
            android:textColor="?attr/appOnBackground"
            android:padding="12dp"
            android:singleLine="true"
            android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Recent Stops Section -->
    <LinearLayout
        android:id="@+id/recentStopsSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="26dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recent_stops"
            style="@style/EInkText.Large"
            android:layout_marginBottom="10dp"
            app:drawableStartCompat="@drawable/directions_bus_24px"
            android:drawablePadding="8dp"
            app:drawableTint="?attr/colorOnBackground"
            android:paddingStart="12dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recentStopsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingHorizontal="0dp" />

        <!-- Carousel Indicator -->
        <LinearLayout
            android:id="@+id/indicatorContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:paddingStart="12dp"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/eink_progress_bar"
        android:visibility="gone" />

    <TextView
        android:id="@+id/errorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/appErrorColor"
        android:textAlignment="center"
        android:visibility="gone"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/noDataTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_bus_arrivals_found_for_this_stop"
        android:textAlignment="center"
        android:visibility="gone"
        android:layout_marginBottom="16dp" />

    <!-- Horizontal list of bus numbers -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/busNumberRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:paddingStart="12dp"/>


    <!--Bus arrivals list-->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:scrollbars="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="16dp"
            android:scrollbarThumbVertical="@drawable/custom_scrollbar"
            android:scrollbarStyle="outsideInset" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>
